{
  // editor
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Fira Code Light",
  "editor.lineHeight": 25,
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  // Theme Costum ui
  "workbench.colorCustomizations": {
    "sideBar.background": "#1e1e1e",
    "sideBarSectionHeader.background": "#1e1e1e",
    "activityBar.foreground": "#00e1ff",
    "statusBar.debuggingBackground": "#1e1e1e",
    "statusBar.background": "#1e1e1e",
    "scrollbarSlider.activeBackground": "#1e1e1e",
    "scrollbarSlider.hoverBackground": "#1e1e1e",
    "scrollbarSlider.background": "#1e1e1e",
    "tab.activeBackground": "#242424",
    "tab.activeBorderTop": "#00e1ff",
    "activityBar.background": "#1e1e1e"
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.productIconTheme": "fluent-icons",
  // html
  "[html]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": false
    },
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "html.format.wrapAttributesIndentSize": 0,
  "html.format.wrapLineLength": 150,
  "html.format.unformattedContentDelimiter": "0",
  "html.format.indentInnerHtml": true,
  "html.format.endWithNewline": true,
  // dart
  "dart.previewFlutterUiGuides": true,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.rulers": [
      70
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "Dart-Code.dart-code"
  },
  "powermode.enabled": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": true,
  // better comment
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "window.title": "${dirty}${activeEditorShort}${separator}${separator}${appName}",
  "liveServer.settings.donotVerifyTags": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.menuBarVisibility": "hidden"
}
