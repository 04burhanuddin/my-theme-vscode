{
  /* formatting */
  "html.format.wrapLineLength": 0,
  "editor.formatOnType": false,
  "editor.formatOnSave": false,
  "editor.formatOnPaste": true,
  "headwind.prependCustomClasses": true,
  /* font */
  "editor.fontFamily": "JetbrainsMono Nerd Font",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.lineHeight": 40,
  "editor.tabSize": 2,
  /* cursor */
  "editor.cursorBlinking": "expand",
  /* icons & theme */
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "Better Solarized Dark",
  "editor.matchBrackets": "never",
  "editor.hideCursorInOverviewRuler": true,
  /* editor */
  "editor.guides.indentation": false,
  "editor.overviewRulerBorder": false,
  "editor.glyphMargin": false,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "off",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.emptySelectionClipboard": false,
  "editor.snippetSuggestions": "top",
  "editor.multiCursorModifier": "alt",
  "editor.selectionHighlight": false,
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "editor.detectIndentation": false,
  "editor.hover.enabled": true,
  "editor.colorDecorators": false,
  "editor.renderControlCharacters": false,
  "editor.lightbulb.enabled": "off",
  "editor.renderWhitespace": "none",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  /* breadcrumb senable show in one tab */
  "breadcrumbs.enabled": true,
  /* workbench */
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.editor.enablePreview": false,
  "workbench.activityBar.location": "hidden",
  "workbench.tips.enabled": false,
  "workbench.editor.showTabs": "single",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  /* window */
  "window.newWindowDimensions": "inherit",
  "window.menuBarVisibility": "toggle",
  /* others */
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.showInlineBreakpointCandidates": false,
  "problems.decorations.enabled": false,
  "symbols.hidesExplorerArrows": false,
  "git.decorations.enabled": false,
  "liveServer.settings.fullReload": true,
  "scm.diffDecorations": "none",
  /* file nesting*/
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "pubspec.yaml": ".flutter-plugins, .packages, .dart_tool, flutter_100_days.iml, .flutter-plugins-dependencies, .metadata, .packages, pubspec.lock, build.yaml, analysis_options.yaml, all_lint_rules.yaml",
    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*",
    "readme.*": "authors, backers.md, changelog*, citation*, code_of_conduct.md, codeowners, contributing.md, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors.md",
    "*.dart": "$(capture).g.dart, $(capture).freezed.dart",
    ".env": ".env.example, .editorconfig",
    "composer.json": "composer.lock",
    "postcss.config.js": "tailwind.config.js, vite.config.js",
    "phpunit.xml": "artisan"
  },
  "workbench.colorCustomizations": {
    /* better solarized dark*/
    "scrollbarSlider.activeBackground": "#002b36",
    "scrollbarSlider.background": "#002b36",
    "scrollbar.shadow": "#002b36",
    "tab.activeBackground": "#002b36",
    "tab.inactiveBackground": "#002b36",
    "tab.activeBorder": "#002b36",
    "tab.activeForeground": "#b58900",
    "tab.inactiveForeground": "#586e75",
    "tab.border": "#002b36",
    "tab.hoverForeground": "#b58900",
    "terminal.background": "#002b36",
    "terminal.border": "#002b36",
    "terminal.tab.activeBorder": "#002b36",
    "editorGroupHeader.tabsBorder": "#002b36",
    "editorGroupHeader.tabsBackground": "#002b36",
    "sideBar.border": "#002b36",
    "sideBar.background": "#002b36",
    "panel.border": "#002b36",
    "panelTitle.activeBorder": "#002b36",
    "panelTitle.activeForeground": "#b58900",
    "panelTitle.inactiveForeground": "#586e75",
    "activityBar.background": "#002b36",
    "activityBar.foreground": "#2aa198",
    "activityBar.activeBorder": "#002b36",
    "editorHoverWidget.background": "#002b36",
    "editorOverviewRuler.border": "#002b36",
    "statusBarItem.remoteBackground": "#073642",
    "editorHoverWidget.border": "#073642",
    "editor.selectionBackground": "#073642",
    "list.activeSelectionBackground": "#002b36",
    "badge.background": "#b58900",
    "badge.foreground": "#fdf6e3",
    "focusBorder": "#002b36",
    "statusBar.noFolderBackground": "#002b36",
    "statusBar.foreground": "#93a1a1",
    "statusBar.background": "#002b36",
    "statusBar.border": "#002b36",
    "editorGroup.border": "#073642"
  },
  /* dart */
  "[dart]": {
    "editor.formatOnSave": false,
    "editor.formatOnType": true,
    "editor.selectionHighlight": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  /* flutter */
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  /* scroolbar */
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  /* exclude */
  "files.exclude": {
    "**/.dart_tool": true,
    "**/.idea": true,
    "**/node_modules": true,
    "**/package-lock.json": true
  },
  /* Terminal */
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontFamily": "'JetbrainsMono Nerd Font', 'MesloLGS NF'",
  "terminal.explorerKind": "external",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.tabs.defaultIcon": "run",
  "terminal.integrated.gpuAcceleration": "canvas",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  /* vim */
  "vim.easymotion": true,
  "vim.timeout": 200,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "keyboard.dispatch": "keyCode",
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j" ],
      "after": [ "<Esc>" ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [ "<leader>", "d" ],
      "after": [ "d", "d" ]
    },
    {
      "before": [ "<C-n>" ],
      "commands": [ ":nohl" ]
    },
    {
      "before": [ "K" ],
      "commands": [ "lineBreakInsert" ],
      "silent": true
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [ "<leader>", "p" ],
      "commands": [ "workbench.action.quickOpen" ],
      "silent": true
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": true
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  }
}
