{
  // editor
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "editor.tabSize": 3,
  "editor.wrappingIndent": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 2,
  "editor.scrollbar.horizontalScrollbarSize": 2,
  "editor.wordBasedSuggestions": false,
  "editor.suggestSelection": "first",
  "editor.lineNumbers": "off",
  "window.menuBarVisibility": "toggle",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.inlayHints.fontSize": 12,
  "editor.lineHeight": 30,
  "editor.scrollbar.vertical": "hidden",
  "editor.linkedEditing": true,
  // font
  "editor.fontFamily": "JetbrainsMono Nerd Font",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  // terminal
  "terminal.integrated.gpuAcceleration": "canvas",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 14.5,
  "terminal.integrated.fontFamily": "JetbrainsMono Nerd Font",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.cursorBlinking": true,
  // workbench
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "terminal.integrated.smoothScrolling": true,
  "workbench.activityBar.visible": false,
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.colorCustomizations": {
    "menu.border": "#1D2021",
    "widget.shadow": "#4b454515",
    "menu.background": "#302f2f",
    "breadcrumb.background": "#1D2021",
    "titleBar.activeBackground": "#1D2021",
    "titleBar.inactiveBackground": "#1D2021",
    "editorGroup.emptyBackground": "#1D2021",
    "statusBar.background": "#1D2021",
    "scrollbar.shadow": "#1D2021",
    "editorGutter.background": "#1D2021",
    "titleBar.border": "#1D2021",
    "editorGroupHeader.tabsBorder": "#1D2021",
    "editorGroupHeader.tabsBackground": "#1D2021",
    "scrollbarSlider.activeBackground": "#1D2021",
    // "scrollbarSlider.hoverBackground": "#FABD2F",
    "scrollbarSlider.background": "#928374",
    "activityBar.activeBorder": "#1D2021",
    "sideBar.background": "#1D2021",
    "tab.activeBorder": "#1D2021",
    "panel.border": "#1D2021",
    "sideBarSectionHeader.background": "#1D2021",
    "focusBorder": "#1D2021",
    "tab.hoverBackground": "#1D2021",
    "panel.background": "#1D2021",
    "sideBar.border": "#1D2021",
    "editorLineNumber.activeForeground": "#FABD2F",
    "editorLineNumber.foreground": "#A1937F",
    "tab.activeBackground": "#1D2021",
    "activityBar.background": "#1D2021",
    "statusBar.border": "#1D2021",
    "activityBar.border": "#1D2021",
    "tab.inactiveBackground": "#1D2021",
    "statusBar.noFolderBackground": "#1D2021",
    "tab.border": "#1D2021",
    "terminal.background": "#1D2021",
    "editor.background": "#1D2021",
    "editorGroup.border": "#1D2021",
    "statusBar.debuggingBackground": "#1D2021",
    "editor.lineHighlightBackground": "#1D2021",
    "editor.selectionBackground": "#373a3b7e"
  },
  // file nesting
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "pubspec.yaml": ".flutter-plugins, .packages, .dart_tool, flutter_100_days.iml, .flutter-plugins-dependencies, .metadata, .packages, pubspec.lock, build.yaml, analysis_options.yaml, all_lint_rules.yaml",
    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*",
    "readme.*": "authors, backers.md, changelog*, citation*, code_of_conduct.md, codeowners, contributing.md, contributors, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors.md",
    "*.dart": "$(capture).g.dart, $(capture).freezed.dart",
    "package.json": "package-lock.json"
  },
  // code formatting
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "html.format.wrapLineLength": 0,
  "bladeFormatter.format.wrapLineLength": 300,
  "liveServer.settings.donotShowInfoMsg": true,
  "glassit.alpha": 215,
  // dart
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    // "editor.rulers": [
    //     80
    // ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  // laravel blade
  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
  }
}